{
  "name": "amp-checklist-bot",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which posts checklists on pull requests.",
  "engines": {
    "node": "^12.13.1"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "fix": "npm run -- --fix",
    "lint-conflicts": "eslint --print-config app.ts | eslint-config-prettier-check",
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "probot run ./dist/app.js",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-checklist-'`date --utc '+%Y%m%d%H%M%S'`",
    "test": "echo No tests defined for this app!",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/auth": "2.0.0",
    "@octokit/rest": "18.0.7",
    "@probot/serverless-gcf": "0.2.0",
    "dotenv": "8.2.0",
    "probot": "10.10.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "@types/node": "13.13.20",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.6.1",
    "nock": "13.0.4",
    "nodemon": "2.0.4",
    "prettier": "2.1.2",
    "ts-jest": "26.4.3",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
