{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "src/**/*.html",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "webpack.*.config.js"
  ]
}
