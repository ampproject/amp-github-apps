{
  "name": "amp-invite-bot",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which invites users to an organization in response to comment macros.",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "setup-db": "node dist/src/setup_db.js",
    "start": "probot run dist/app.js",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-invite-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "16.43.2",
    "@probot/serverless-gcf": "0.2.0",
    "dotenv": "8.6.0",
    "knex": "0.95.11",
    "pg": "8.7.1",
    "probot": "9.15.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/node": "13.13.52",
    "jest": "26.6.3",
    "jest-silent-reporter": "0.5.0",
    "nock": "12.0.3",
    "nodemon": "2.0.12",
    "sqlite3": "5.0.2",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "typescript": "4.4.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
