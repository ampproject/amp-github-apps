{
  "name": "amp-invite-bot",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which invites users to an organization in response to comment macros.",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "setup-db": "node dist/src/setup_db.js",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-invite-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change",
    "gcp-build": "echo \"Skipping build step on GCP (See https://cloud.google.com/functions/docs/release-notes#April_11_2023)\""
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "18.12.0",
    "dotenv": "10.0.0",
    "knex": "2.5.1",
    "pg": "8.11.3",
    "probot": "12.3.1"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "2.1.1",
    "@octokit/webhooks-types": "4.18.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.52",
    "jest": "27.5.1",
    "jest-silent-reporter": "0.5.0",
    "nodemon": "2.0.22",
    "sqlite3": "5.1.6",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run build && cd dist && npx functions-framework --target=probot",
    "ext": "js,json,ts",
    "watch": [
      ".env",
      "*.*"
    ],
    "ignore": [
      "dist/"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
