{
  "name": "amp-invite-bot",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which invites users to an organization in response to comment macros.",
  "engines": {
    "node": "^12.13.1"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "fix": "npm run lint -- --fix",
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "setup-db": "node dist/src/setup_db.js",
    "start": "probot run dist/app.js",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-invite-'`date -u '+%Y%m%d%H%M%S'`",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "16.43.2",
    "@probot/serverless-gcf": "0.2.0",
    "dotenv": "8.2.0",
    "knex": "0.21.15",
    "pg": "8.5.1",
    "probot": "9.15.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "13.13.38",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "4.10.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.3.0",
    "jest": "26.6.3",
    "nock": "12.0.3",
    "nodemon": "2.0.6",
    "prettier": "2.2.1",
    "sqlite3": "4.2.0",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
