{
  "name": "percy-mirror-verifier",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app that verifies Percy builds are mirrored between the main branch and its PRs.",
  "engines": {
    "node": "18.18.0"
  },
  "scripts": {
    "clean": "rm -r dist/",
    "start": "ts-node ./src/app.ts",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-percy-mirror-verifier-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "20.0.2",
    "@types/dedent": "0.7.0",
    "@types/express": "4.17.18",
    "@types/node": "18.18.1",
    "dedent": "1.5.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.5",
    "deepmerge": "4.3.1",
    "jest": "29.7.0",
    "jest-mock": "29.7.0",
    "jest-silent-reporter": "0.5.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "smee-client": "1.2.3",
    "ts-jest": "29.1.1"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "ext": "env,json,ts",
    "watch": [
      ".env",
      "src/"
    ]
  },
  "jest": {
    "preset": "ts-jest"
  }
}
