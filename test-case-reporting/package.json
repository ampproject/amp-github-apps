{
  "name": "amp-test-case-reporting",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "An app that tracks the pass/fail status of tests run in Travis builds",
  "engines": {
    "node": "12.13.1"
  },
  "scripts": {
    "lint": "eslint **/*.ts",
    "fix": "eslint **/*.ts --fix",
    "lint-conflicts": "eslint --print-config app.ts | eslint-config-prettier-check",
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "dotenv": "8.2.0",
    "express": "4.17.1"
  },
  "devDependencies": {
    "@types/express": "4.17.6",
    "@types/jest": "25.1.2",
    "@types/node": "13.7.0",
    "@typescript-eslint/eslint-plugin": "2.19.2",
    "@typescript-eslint/parser": "2.19.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "25.1.0",
    "nock": "11.7.2",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
