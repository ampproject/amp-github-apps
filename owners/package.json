{
  "name": "owners",
  "author": "Google Inc.",
  "private": true,
  "version": "0.0.1",
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A web service that suggests approvers for a GitHub pull request based on OWNERS files and enforces reviews by OWNERS as a GitHub status check.",
  "scripts": {
    "init": "node scripts/warm_cache.js",
    "dev": "node info_server.js",
    "start": "probot run ./index.js",
    "deploy-tag": "git tag 'deploy-owners-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/storage": "7.1.0",
    "@octokit/rest": "20.0.1",
    "ajv": "8.12.0",
    "express": "4.18.2",
    "highlight": "0.2.4",
    "json5": "2.2.3",
    "lodash": "4.17.21",
    "minimatch": "9.0.3",
    "probot": "12.3.1",
    "sleep-promise": "9.1.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "jest-silent-reporter": "0.5.0",
    "sinon": "16.0.0",
    "smee-client": "1.2.3",
    "supertest": "6.3.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
