{
  "name": "amp-onduty-bot",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which updates teams to sync with onduty rotations.",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "functions-framework --target=dist/app",
    "dev": "nodemon",
    "deploy-tag": "git tag 'deploy-onduty-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/rest": "18.12.0",
    "@probot/serverless-gcf": "0.2.0",
    "dotenv": "10.0.0",
    "http-status-codes": "2.2.0",
    "sleep-promise": "9.1.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "2.1.1",
    "@types/express": "4.17.17",
    "@types/jest": "27.5.2",
    "@types/node": "16.18.51",
    "jest": "27.5.1",
    "jest-silent-reporter": "0.5.0",
    "nodemon": "2.0.22",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
