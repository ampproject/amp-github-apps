{
  "name": "amp-error-monitoring",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which monitors errors reported in AMP pages and files associated GitHub issues.",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "fix": "npm run lint -- --fix",
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "node dist/app.js",
    "dev": "functions-framework --target=app --source=dist",
    "deploy-tag": "git tag 'deploy-error-monitoring-'`date --utc '+%Y%m%d%H%M%S'`",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/auth": "2.0.1",
    "@octokit/graphql": "4.5.8",
    "@octokit/rest": "16.43.2",
    "body-parser": "1.19.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "google-auth-library": "6.1.3",
    "http-status-codes": "1.4.0",
    "mustache": "4.0.1",
    "node-cache": "5.1.2",
    "node-fetch": "2.6.1",
    "querystring": "0.2.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "1.7.1",
    "@types/express": "4.17.9",
    "@types/jest": "25.2.3",
    "@types/mustache": "4.0.1",
    "@types/node": "13.13.34",
    "@types/node-fetch": "2.5.7",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.2.0",
    "jest": "25.5.4",
    "nock": "11.9.1",
    "nodemon": "2.0.6",
    "prettier": "1.19.1",
    "ts-jest": "26.4.4",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
