{
  "name": "amp-error-monitoring",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which monitors errors reported in AMP pages and files associated GitHub issues.",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "node dist/app.js",
    "dev": "functions-framework --target=app --source=dist",
    "deploy-tag": "git tag 'deploy-error-monitoring-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/graphql": "4.8.0",
    "@octokit/rest": "18.10.0",
    "body-parser": "1.19.0",
    "dotenv": "10.0.0",
    "express": "4.17.3",
    "google-auth-library": "7.9.1",
    "http-status-codes": "2.1.4",
    "mustache": "4.2.0",
    "node-cache": "5.1.2",
    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "2.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.1",
    "@types/mustache": "4.1.2",
    "@types/node": "16.11.6",
    "@types/node-fetch": "2.5.12",
    "jest": "27.1.1",
    "jest-silent-reporter": "0.5.0",
    "nock": "13.1.3",
    "nodemon": "2.0.17",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
