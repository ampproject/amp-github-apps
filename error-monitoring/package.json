{
  "name": "amp-error-monitoring",
  "author": "The AMP HTML Authors",
  "version": "0.0.1",
  "private": true,
  "repository": "http://github.com/ampproject/amp-github-apps",
  "description": "A GitHub app which monitors errors reported in AMP pages and files associated GitHub issues.",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w --p tsconfig.json",
    "start": "node dist/app.js",
    "dev": "functions-framework --target=app --source=dist",
    "deploy-tag": "git tag 'deploy-error-monitoring-'`date -u '+%Y%m%d%H%M%S'`",
    "test": "jest --reporters=jest-silent-reporter",
    "test:watch": "jest --watch --notify --notifyMode=change"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@octokit/graphql": "4.6.4",
    "@octokit/rest": "16.43.2",
    "body-parser": "1.19.0",
    "dotenv": "8.6.0",
    "express": "4.17.1",
    "google-auth-library": "6.1.6",
    "http-status-codes": "2.1.4",
    "mustache": "4.2.0",
    "node-cache": "5.1.2",
    "node-fetch": "2.6.1",
    "querystring": "0.2.1"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "1.9.0",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/mustache": "4.1.2",
    "@types/node": "13.13.52",
    "@types/node-fetch": "2.5.11",
    "jest": "26.6.3",
    "jest-silent-reporter": "0.5.0",
    "nock": "11.9.1",
    "nodemon": "2.0.10",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-preload.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  }
}
